#!/bin/bash

set -e

IMG_GZ="$1"
IMG_SHA256="$2"
IMG_MANIFEST="$3"
STACK=$4
VERSION="$5"
IMG_PKG_VERSIONS="$6"

display Creating Image on $MANIFEST_APP_URL

jq \
    --null-input \
    --arg stack "$STACK" \
    --slurpfile packages $IMG_PKG_VERSIONS \
    --arg version "$VERSION" \
    --arg sha "$(< "$IMG_SHA256")" \
    '{
        stack: $stack,
        version: $version,
        sha: $sha,
        packages: $packages
    }' |
    curl \
        --silent --show-error --fail \
        --user-agent 'Stack Image Tools' \
        --header "Authorization: Bearer $MANIFEST_APP_TOKEN" \
        --header "Content-Type: application/json" \
        --data @- \
        "$MANIFEST_APP_URL/images" |
    jq > $IMG_MANIFEST \
        --arg name "$STACK" \
        '{
            name: $name
        } + .'

display Uploading Image to S3
PUT_URL=$(jq -r .put_url "$IMG_MANIFEST")
curl \
    --silent --show-error \
    --user-agent 'Stack Image Tools' \
    --header "Content-Type: application/octet-stream" \
    --upload-file "$IMG_GZ" \
    "$PUT_URL"
